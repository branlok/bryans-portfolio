<div class="contact-container">
    <div class="show"><img src="/bones.png" alt="" /></div>
    <div class="contact">
        <div class="info"></div>
        <form class="form">
            <label for="name">Name</label>
            <input placeholder="Patient name" type="text" />
            <label for="email">Email</label>
            <input placeholder="Your e-mail" type="text" />
            <label for="message">Message</label>
            <textarea placeholder="Your message" name="" id="" cols="30" rows="10"></textarea>
            <button type="submit">Send</button>
        </form>
    </div>
</div>

<style>
    .contact-container {
        width: 100%;
        /* height: 500px; */
        display: flex;
        flex-direction: column;
        color: white;
        .show {
            height: 250px;
            width: 100%;
            overflow: hidden;
            img {
                object-fit: cover;
                object-position: 20% 20%;
                width: 100%;
                height: 100%;
            }
        }
        form {
            display: flex;
            flex-direction: column;
            padding: 20px;
            width: 100%;
            input:focus,
            textarea:focus {
                transition: 0.2s;
                outline: 2px solid #b0c9ae;
            }
            input {
                border: none;
                height: 40px;
                border-radius: 5px;
                padding: 5px 10px;
                outline: 2px solid transparent;
            }
            textarea {
                border: none;
                border-radius: 5px;
                padding: 10px 10px;
                font-family: Arial, Helvetica, sans-serif;
                outline: 2px solid transparent;
            }
            label {
                padding: 5px;
                font-weight: bold;
                font-size: var(--font-size-sm);
            }
            button {
                border-radius: 3px;
                width: 100%;
                padding: 20px 30px;
                background-color: #b0c9ae;
                font-size: var(--font-size-sm);
                color: black;
                border-style: none;
                font-weight: bold;
                transition: 0.2s;
                cursor: pointer;
                margin-top: 10px;
                &:hover {
                    background-color: grey;
                    color: black;
                    transform: scale(0.98);
                }
            }
        }
        @media only screen and (min-width: 900px) {
            flex-direction: row;
            height: 800px;
            .show {
                width: 50%;
                height: 100%;
                background-color: rgb(194, 194, 194);
            }
            .contact {
                width: 50%;
                display: flex;
                padding-bottom: 30px;
                background-color: rgb(224, 224, 224);
                label {
                    color: black;
                }
            }
        }
    }
</style>
