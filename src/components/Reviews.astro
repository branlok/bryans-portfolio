<style>
    img {
        display: block;
    }
    .review-container {
        width: 100%;
        color: white;
        display: flex;
        flex-direction: column;
        .image-wrapper {
            border-top: 5px solid white;
            border-bottom: 5px solid white;
        }
        .reviewer-img {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }
        .title {
            width: 100%;
            height: 100px;

            color: white;
            font-size: var(--font-size-xxl);
            font-weight: bold;
            padding: 10px;
            padding-top: 30px;
            .abstract {
                display: none;
            }
        }

        .quote-containter {
            position: relative;
            padding: 50px;

            &:before {
                content: '"';
                font-size: 160px;
                color: white;
                top: -20px;
                left: 20px;
                position: absolute;
            }
            &:after {
                content: '"';
                font-size: 160px;
                color: white;
                bottom: -70px;
                right: 20px;
                position: absolute;
            }
            p {
                padding: 20px;
                font-size: var(--font-size-base);
                font-weight: bold;
            }
        }
        @media only screen and (min-width: 900px) {
            .title {
                color: black;
                position: relative;
                .abstract {
                    display: block;
                    position: absolute;
                    right: 0px;
                    bottom: 0px;
                    width: 400px;
                    height: 200px;
                    overflow: hidden;
                    img {
                        transform: rotate(90deg);
                    }
                }
            }
            .image-wrapper {
                border: none;
            }
            .reviewer-img {
                height: 200px;
            }
            .quote-container {
                background-color: black;
                color: white;
                flex-grow: 1;
            }
            .text-container {
                background-color: black;
                color: white;
                display: flex;
                align-items: center;
                &:nth-child(odd) {
                    flex-direction: row-reverse;
                }

                p {
                    font-size: var(--font-size-md);
                }
                img {
                    width: 550px;
                    height: 400px;
                }
                border-bottom: 1px solid grey;
            }
        }
    }
</style>
